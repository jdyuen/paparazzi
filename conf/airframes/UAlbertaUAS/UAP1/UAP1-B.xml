<!DOCTYPE airframe SYSTEM "../../airframe.dtd">

<!-- UAP1-A : U of A UAS Group Unmanned Aircraft Platform 1 Configuration A
     Hobby Lobby Senior Telemaster
     Modified for removable bolt-on wing, tail servos; dual aileron servos
     Evolution 26GX 2-stroke gas engine, electronic ignition w/ 2500mAh 2S Lipo
     Spektrum DX-8 Transmitter, AR8000 Receiver w/ 1 Sat, Telemetry module
     Servo and autopilot power from 4000mAh 2S Lipo with Castle Creations CCBEC @ 5V
     SmartFly optical ignition cutoff module
     PPM Encoder w/ Atmega168
     PPZUAV TWOG V1 board
     Joby Robotics Aspirin IMU
     Digi XTend 900MHz radio modems (transparent serial)
     PPZUAV Ublox LEA 5H GPS

     Additional Notes:
     -first configuration, based on twinstar_example.xml
-->

<airframe name="UAP1-A">

<!-- Firmware Section -->
  <firmware name="fixedwing">
    <target name="sim" 			board="pc"/>
    <target name="jsbsim"		board="pc"/>
    <target name="ap" 			board="twog_1.0">
      <define name="STRONG_WIND"/> <!-- can these be placed elsewhere, like MISC? -->
      <define name="WIND_INFO"/>
      <define name="WIND_INFO_RET"/>

      <configure name="PERIODIC_FREQUENCY" value="120"/>
      <configure name="AHRS_PROPAGATE_FREQUENCY" value="100"/> <!-- can these AHRS parts go in the AHRS section? -->
      <configure name="AHRS_CORRECT_FREQUENCY" value="100"/>
      <define name="AHRS_TRIGGERED_ATTITUDE_LOOP" /> <!-- attittude loop called only when a new ins attitude is available -->

      <configure name="AHRS_ALIGNER_LED" value="3"/> <!-- LED3 is on the USB connector, and the yellow LED NEEDS RESISTOR -->
      <configure name="CPU_LED" value="3"/> <!-- should this be AHRS_CPU_LED? -->
    </target>

    <define name="AGR_CLIMB"/>
    <define name="LOITER_TRIM"/>
    <define name="ALT_KALMAN"/>
    <!-- <define name="USE_AIRSPEED"/> -->
    <!-- <define name="USE_I2C1"/> -->

    <!-- Difference between ic and dcm???? AHRS_GRAVITY_UPDATE_NORM_HEURISTIC AHRS_MAG_UPDATE_YAW_ONLY AHRS_PROPAGATE_QUAT AHRS_PROPAGATE_RMAT AHRS_PROPAGATE_LOW_PASS_RATES
                                           AHRS_UPDATE_FW_ESTIMATOR Couple more as well
    -->
    <!--
    <subsystem name="ahrs" type="ic">
      <define name="AHRS_GRAVITY_UPDATE_COORDINATED_TURN" />
    </subsystem>
    <subsystem name="imu" type="aspirin_i2c"/>
    -->
    <subsystem name="imu" type="aspirin_i2c"/>
    <subsystem name="ahrs" type="dcm">
      <!-- <define name="USE_MAGNETOMETER" /> -->
      <define name="USE_GPS"/>
    </subsystem>

    <subsystem name="i2c"/>

    <subsystem name="radio_control" type="ppm"/>
    <subsystem name="telemetry"     type="transparent"/> <!-- default baud is 57600 -->
    <subsystem name="control"/>
    <subsystem name="gps"           type="ublox"/>
    <subsystem name="navigation"/>

  </firmware>

  <firmware name="setup">
    <target name="tunnel" 		board="twog_1.0"/>
    <target name="setup_actuators" 	board="twog_1.0"/>
  </firmware>

<!-- modules section -->
